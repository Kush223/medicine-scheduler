<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="android.example.medicinescheduerapp.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home"/>

    <activity
        android:id="@+id/nav_account"
        android:name="android.example.medicinescheduerapp.ui.login.loginSignUpActivity"
        android:label="Account"
        tools:layout="@layout/activity_login_signup"/>

    <fragment
        android:id="@+id/nav_doctor"
        android:name="android.example.medicinescheduerapp.ui.profile.doctorProfileFragment"
        android:label="Doctor"
        tools:layout="@layout/fragment_doctor_profile"/>

    <fragment
        android:id="@+id/nav_patient"
        android:name="android.example.medicinescheduerapp.ui.profile.patientProfileFragment"
        tools:layout="@layout/fragment_patient_profile"
        android:label="Patient"/>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="android.example.medicinescheduerapp.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="android.example.medicinescheduerapp.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/nav_doc_prescriptions"
        android:name="android.example.medicinescheduerapp.ui.docPrescriptions.DocPrescriptions"
        android:label="Prescriptions"
        tools:layout="@layout/fragment_doc_prescriptions"
        />
</navigation>