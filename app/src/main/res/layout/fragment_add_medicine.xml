<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.prescription.addMedPresFragment"
    android:padding="16dp">

    <EditText
        android:id="@+id/medicine_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Medicine name"
        android:textSize="20sp"
        android:inputType="text"/>
    <EditText
        android:id="@+id/medicine_description"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:inputType="text"/>
    <EditText
        android:id="@+id/medicine_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="Days and time of eating"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/medicine_dosage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dosage/times a day"
        android:textSize="20sp"
        android:inputType="textMultiLine" />




</LinearLayout>